#ifndef HYDRA_ALLOCATOR_HPP_
#define HYDRA_ALLOCATOR_HPP_

#include <pool>
#include <global>

namespace hydra {

class Allocator
{
protected:
	// own data..
public:
	Allocator()
	{
	}
	
	virtual ~Allocator()
	{
	}
	
	virtual bool initialize()
	{
		return true;
	}

	template <class CType>
	CType *create()
	{
		return new CType;
	}

	template <class CType>
	void destroy( CType* data )
	{
		if( data == NULL )
		{
			return;
		}
		delete data;
	}
};

} // namespace hydra
#endif // HYDRA_ALLOCATOR_HPP_
